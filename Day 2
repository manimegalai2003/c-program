1. Alphabet or Numbers or Special character: 

#include <stdio.h>
int main() {
    char ch;
    printf("Enter a character: ");
    scanf("%c", &ch); 

    if ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z'))
        printf("Its an Alphabet");
    else if (ch >= '0' && ch <= '9')
        printf("Its an Number");
    else
        printf("Its an Special Character");

    return 0;
}

			or

#include <stdio.h>
int main() {
    char ch;
    printf("Enter a character: ");
    scanf("%c", &ch); 

    ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z')) ?
        printf("Its an Alphabet"):
    (ch >= '0' && ch <= '9') ?
        printf("Its an Number"):
    printf("Its an Special Character");

    return 0;
}



2. leap yr or not:

#include <stdio.h>
int main() {
    int year=2024;
    
    if((year%4==0 && year%100!=0) || year%400==0)
    {
        printf("It is a leap year.");
    }
    else
    {
        printf("It is not a leap year.");
    }
    return 0;
}
