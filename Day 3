1. Days

#include <stdio.h>
int main() {
    int n;
    printf("Enter a number: ");
    scanf("%d", &n);

    if (n == 1)
        printf("Monday");
    else if (n == 2)
        printf("Tuesday");
    else if (n == 3)
        printf("Wednesday");
    else if (n == 4)
        printf("Thursday");
    else if (n == 5)
        printf("Friday");
    else if (n == 6)
        printf("Saturday");
    else if (n == 7)
        printf("Sunday");
    else if (n == 8)
        printf("Invalid");

    return 0;
}

2.Triangle

#include <stdio.h>

int main() {
    int a, b, c;
    printf("Enter three sides of the triangle: ");
    scanf("%d %d %d", &a, &b, &c);

    // Check if it's a triangle
    if (a + b > c && a + c > b && b + c > a) {
        // Check for Equilateral Triangle
        if (a == b && b == c)
            printf("Equilateral Triangle\n");
        // Check for Right-Angle Triangle using Pythagoras
        else if ((a * a == b * b + c * c) ||
                 (b * b == a * a + c * c) ||
                 (c * c == a * a + b * b))
            printf("Right-Angle Triangle\n");
        else
            printf("Triangle is possible but not equilateral or right-angled\n");
    } else {
        printf("Not a Triangle\n");
    }

    return 0;
}
