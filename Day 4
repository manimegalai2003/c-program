1.Time

#include <stdio.h>

int main() {
    int h, m;
    printf("Enter time (HH:MM): ");
    scanf("%d:%d", &h, &m);

    if (h >= 0 && h <= 23 && m >= 0 && m <= 59)
        printf("Valid Time\n");
    else
        printf("Invalid Time\n");

    return 0;
}

2. Valid Date

#include <stdio.h>

#include <stdio.h>

int main() {
    int d, m, y;
    printf("Enter date (dd/mm/yyyy): ");
    scanf("%d/%d/%d", &d, &m, &y);

    int max = (m==2) ? ((y%4==0 && (y%100!=0 || y%400==0)) ? 29 : 28) :
              (m==4 || m==6 || m==9 || m==11) ? 30 :
              (m>=1 && m<=12) ? 31 : 0;

    printf((y>0 && d>=1 && d<=max) ? "Valid Date\n" : "Invalid Date\n");
    return 0;
}
