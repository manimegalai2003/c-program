1.
#include <stdio.h>

int main() {
    int a=12345;
    int sum=0;
    while(a>0){

        sum=sum+(a%10);
        
        a=a/10;
         printf("%d\n", sum);
    }
   
    return 0;
}

2.binary to decimal

#include <stdio.h>

int main() {
    int binary = 1001, decimal = 0, base = 1, rem;

    while (binary > 0) {
        rem = binary % 10;
        decimal += rem * base;
        binary /= 10;
        base *= 2;
    }

    printf("Decimal: %d", decimal);
    return 0;
}
